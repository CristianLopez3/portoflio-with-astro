---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";
import HomeIcon from "./icons/HomeIcon.astro";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between text-neutral-900">
  
  <a 
    href={`mailto:${presentation.mail}`} 
    class="hover:text-zinc-950 hover:font-bold"
    >
      { presentation.mail }
    </a>

  <nav role="navigation">
    <ul role="list" class="flex flex-row justify-center items-center gap-2">
      <li>
        <a 
          href="/"
          class:list={{
              ["hover:text-zinc-950 hover:scale-110"]: true
          }}
        >
          <HomeIcon />
        </a>
      </li>
      <li class="text-2xl">/</li>
      <li>
        <a
          href="/posts"
          class:list={{
            ["hover:text-zinc-950 hover:font-bold"]: true,
            ["text-neutral-900 "]: pathname === "/posts",
          }}>Posts</a
        >
      </li>
    </ul>
  </nav>
</header>
